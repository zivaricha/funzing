<div class="booking-section col-xs-12 col-sm-4">
  <div class="well">
  <%= form_for Order.new do |f| %>
      <%= hidden_field_tag :activity_id, @activity.id %>
      <div class="form-group">
        <div class="activity-date center form-spacing">
          <%= @activity.date %>
        </div>
        <div class="activity-price form-spacing">
          <%= @activity.price %> ILS per ticket
        </div>
        <div>
          <%= f.label "How many tickets?" %>
        </div>
        <div class="form-padding">
          <%= f.select(:amount_of_tickets, (1..@activity.amount_of_tickets_left)) %>
        </div>
        <div class="col-xs-12 center form-spacing">
          <%= f.submit "Book now", class: "book-now-btn" %>
        </div>
      </div>
  <% end %>
  </div>
</div>