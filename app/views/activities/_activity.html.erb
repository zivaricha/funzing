  <div class="col-xs-4 activity-box">
    <div class="well well-lg">
      <h3 class="activity-title"><%= link_to activity.title, activity_path(activity) %></h3>
      <hr class="line-breaker">
      <div class="activity-date">
        <%= activity.date %>
      </div>
      <hr class="line-breaker">
      <div class="activity-price">
        <p><%= activity.price %> ILS per ticket</p>
      </div>
    </div>
  </div>
